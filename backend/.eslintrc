{
  "extends": "airbnb/base",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "max-len": [2, {"code": 200}],
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "padded-blocks": "off",
    "indent": ["error", 4],
    "quotes": ["error", "double"],
    "no-multi-assign": "off",
    "arrow-parens": "off"
  }
}